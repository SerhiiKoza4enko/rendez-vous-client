section.booking(tjsMaterialize)
  h3.center('*ngIf'='view !== "room"') {{ viewDate | calendarDate:(view + 'ViewTitle'):'ru' }}
  h4.center('*ngIf'='view === "day"') {{ selectedRoom.name }} ({{ selectedRoom.square }} кв.м., {{ selectedRoom.capacity }} чел.)
  .row
    .col-1
      .nav-button.prev-month(
        'mwlCalendarPreviousView'
        '[view]'='view',
        '[(viewDate)]'='viewDate'
        '(click)'='loadBookings()'
        '*ngIf'='view === "month"'
      )
      .nav-button.prev-month(
        '(click)'='view="month"'
        '*ngIf'='view === "room"'
      )
      .nav-button.prev-month(
        '(click)'='view="room"'
        '*ngIf'='view === "day"'
      )
    .col-10.background-white
      div('[ngSwitch]'='view')
        mwl-calendar-month-view(
          *ngSwitchCase="'month'"
          '[viewDate]'='viewDate'
          '[events]'='events'
          '[locale]'='"ru"'
          '[weekStartsOn]'='weekStartsOn'
          '[dayModifier]'='dayModifier'
          '(dayClicked)'='daySelect($event.day.date)'
        )
        .row.background-green(*ngSwitchCase='"room"')
          div(
            '*ngFor'='let room of rooms'
            class='col-6 col-lg-4 pointer'
            '(click)'='selectRoom(room)'
          )
            .grid.center-block
              figure.effect-zoe
                img.img-responsive.center-block(
                  '[src]'='room.image'
                )
                figcaption
                  h2.center {{ room.name }}
                  p.description
                    i.fa.fa-info-circle('(click)'='openRoomInfo(room); $event.stopPropagation();')
                    span
                      | Площадь: {{ room.square }} кв.м.
                    span
                      | Количество человек: {{ room.capacity }}
                    //- span(
                    //-   '[innerHTML]'='room.description'
                    //- )
        mwl-calendar-day-view(
          *ngSwitchCase='"day"'
          '[viewDate]'='viewDate'
          '[events]'='dayEvents'
          '[locale]'='"ru"'
          '[dayStartHour]'='startHours'
          '[dayEndHour]'='endHours'
          '(hourSegmentClicked)'='timeSelect($event)'
          '(eventClicked)'='eventClicked($event)'
        )
    .col-1
      .nav-button.next-month(
        'mwlCalendarNextView'
        '[view]'='view',
        '[(viewDate)]'='viewDate'
        '(click)'='loadBookings()'
        '*ngIf'='view === "month"'
      )
  .row
