      .col-lg-8.mx-auto.text-center
        a.btn.btn-lg.btn-outline(href='#')
          i.fa.fa-download
          |               Download Theme
// Contact Section
section#contact
  .container
    h2.text-center Contact Me
    hr.star-primary
    .row
      .col-lg-8.mx-auto
        // To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19.
        // The form should work on most web servers, but if the form is not working you may need to configure your web server differently.
        form#contactForm(name='sentMessage', novalidate='')
          .control-group
            .form-group.floating-label-form-group.controls
              label Name
              input#name.form-control(data-validation-required-message='Please enter your name.', type='text', placeholder='Name', required='')
              p.help-block.text-danger
          .control-group
            .form-group.floating-label-form-group.controls
              label Email Address
              input#email.form-control(data-validation-required-message='Please enter your email address.', type='email', placeholder='Email Address', required='')
              p.help-block.text-danger
          .control-group
            .form-group.floating-label-form-group.controls
              label Phone Number
              input#phone.form-control(data-validation-required-message='Please enter your phone number.', type='tel', placeholder='Phone Number', required='')
              p.help-block.text-danger
          .control-group
            .form-group.floating-label-form-group.controls
              label Message
              textarea#message.form-control(data-validation-required-message='Please enter a message.', rows='5', placeholder='Message', required='')
              p.help-block.text-danger
          br
          #success
          .form-group
            button#sendMessageButton.btn.btn-success.btn-lg(type='submit') Send
