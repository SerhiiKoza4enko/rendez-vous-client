section.bg-animated.admin-layout.rv-bg-fist-important(tjsMaterialize)
  header
    nav.navbar.navbar-full.navbar-fixed-top.navbar-animated.navbar-header-menu.navbar-top
      .clearfix
      #header-menu.navbar-toggleable-md
        .navbar-body
          .center
            a.navbar-brand.hidden-md-down.logo(routerLink='/')
              img.img.img-responsive.img-glow(
                [src]='"../../assets/images/text.png"'
                alt='Rendez Vous'
              )
            ul.nav.navbar-nav.cl-effect
              li.nav-item.menu-item(data-menuanchor='pages')
                a.nav-link.line-height-1.pointer(href='admin#pages')
                  | Творческое
                  | пространство
              //- li.nav-item.menu-item(data-menuanchor='foreigns')
              //-   a.nav-link.line-height-1.pointer(href='admin#foreigns')
              //-     | Иноязычное
              //-     | пространство
              li.nav-item.menu-item(data-menuanchor='events')
                a.nav-link.pointer(href='admin#events')
                  | Мероприятия
              li.nav-item.menu-item(data-menuanchor='users')
                a.nav-link.pointer(href='admin#users')
                  | Пользователи
              li.nav-item.menu-item(data-menuanchor='feedbacks')
                a.nav-link.pointer(href='admin#feedbacks')
                  | Отзывы
              li.nav-item.menu-item(data-menuanchor='booking')
                a.nav-link.pointer(href='admin#booking')
                  | Бронирование
              li.nav-item.menu-item(data-menuanchor='gallery')
                a.nav-link.pointer(href='admin#gallery')
                  | Галерея
              li.nav-item.menu-item(data-menuanchor='rooms')
                a.nav-link.pointer(href='admin#rooms')
                  | Комнаты
              li.nav-item(
                routerLinkActive='active'
                '*ngIf'="user"
              )
                a.nav-link.user-profile-link
                  .img.img-avatar.img-rounded-circle-hover(
                    '[ngStyle]'='{ backgroundImage: "url(\'" + user.picture + "\')" }'
                  )
                  span.username
                    | &nbsp;
                    strong {{ user.firstname || user.login }}
              li.nav-item('*ngIf'='user')
                a.nav-link.pointer(
                  '(click)'='logout()'
                  ngbTooltip='Sign Out'
                  placement='left'
                  container='body'
                )
                  i.fa.fa-sign-out
  .content-body
