      '[mnFullpage]'='options'
      '[mnFullpageNavigation]'='true'
      '[mnFullpageShowActiveTooltip]'='true'
      '[mnFullpageKeyboardScrolling]'='true'
      '[mnFullpageSlidesNavigation]'='true'
      '[mnFullpageNavigationPosition]'='"right"'
      '[mnFullpageOnLeave]'='onPageChanged'
